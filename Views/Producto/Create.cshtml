@model ProyectoFinal.Models.Producto

<h1>Crear Nuevo Producto</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdTipo"></label>
        <input asp-for="IdTipo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Iva"></label>
        <input asp-for="Iva" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CodigoBarras"></label>
        <input asp-for="CodigoBarras" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Producto")'">Regresar</button>
</form>
