@model ProyectoFinal.Models.Usuarios

<h1>Editar Usuario</h1>

<form asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Clave"></label>
        <input asp-for="Clave" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Usuario"></label>
        <input asp-for="Usuario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rol"></label>
        <input asp-for="Rol" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Usuario")'">Regresar</button>
</form>